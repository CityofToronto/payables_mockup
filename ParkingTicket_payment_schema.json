{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "/",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"Payment", "Service", "Payable"
	],
	"properties": {
		"Payment": {
			"$ref": "#/definitions/Payment"
		},
		"Service": {
			"$ref": "#/definitions/TicketService"
		},
		"Payable": {
			"$ref": "#/definitions/TicketPayable"
		}
	},
	"definitions": {
		"TicketService": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"example": "PARKINGTAGS",
					"enum": [
						"PARKINGTAGS"
					]
				},
				"VehiclePlateNumber": {
					"type": "string",
					"example": "ABCD234",
					"pattern": "^[a-zA-Z0-9]*$"
				},
				"TagNumber": {
					"type": "string",
					"pattern": "^[a-z_A-Z]{2}\\d{6}$|^\\d{8}$",
					"example": "AB123456"
				}
			}
		},
		"TicketPayable": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"example": "ParkingTicket"
				},
				"LineItemID": {
					"type": "string",
					"example": "5425432"
				},
				"AmountDue": {
					"type": "number",
					"format": "double",
					"example": 15.12
				},
				"DueDate": {
					"type": "string",
					"format": "date",
					"example": "2019-11-01",
					"pattern": "^[0-9-]*$"
				},
				"PaidAmount": {
					"type": "number",
					"format": "double",
					"example": 15.12,
					"description": "Amount paid for this line-item"
				},
				"LineItemFee": {
					"type": "number",
					"format": "double",
					"example": 0
				},
				"TagNumber": {
					"type": "string",
					"example": "fj23979723",
					"pattern": "^[a-zA-Z0-9]*$"
				},
				"NSFRefNo": {
					"type": "string",
					"example": "sadf3",
					"pattern": "^[a-zA-Z0-9]*$"
				}
			}
		},
		"Payment": {
			"required": [
				"BatchID", "CardNum", "CardType", "ConfirmationNumber", "GatewayPaymentID", "LineItemsIDs", "PaymentID", "PaymentType", "ProcessingFee", "TellerID", "TotalAmount", "TransactionTimestamp"
			],
			"type": "object",
			"properties": {
				"TellerID": {
					"type": "string",
					"example": "PayIT"
				},
				"PaymentType": {
					"type": "string",
					"example": "CreditCard"
				},
				"PaymentID": {
					"type": "string",
					"example": "hwhr-2344-34asdf-4235"
				},
				"ConfirmationNumber": {
					"type": "string",
					"example": "j93J22j"
				},
				"TransactionTimestamp": {
					"type": "string",
					"format": "date-time"
				},
				"BatchID": {
					"type": "string",
					"example": "2019-11-01"
				},
				"ProcessingFee": {
					"type": "number",
					"format": "double",
					"example": 0.01
				},
				"ConvenienceFee": {
					"type": "number",
					"format": "double",
					"example": 0.01
				},
				"TotalAmount": {
					"type": "number",
					"format": "double",
					"example": 1345.12
				},
				"CardType": {
					"type": "string",
					"example": "visa"
				},
				"CardNum": {
					"type": "string",
					"example": "4242********4242"
				},
				"LineItemsIDs": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"CancelledAmount": {
					"type": "number",
					"format": "double"
				},
				"CancelledLineItemsIDs": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			}
		}
	}
}
