{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "/",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"Payment", "Service", "Payable"
	],
	"properties": {
		"Payment": {
			"$ref": "#/definitions/Payment"
		},
		"Service": {
			"$ref": "#/definitions/TicketService"
		},
		"Payable": {
			"$ref": "#/definitions/TicketPayable"
		}
	},
	"definitions": {
		"TicketService": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"example": "PARKINGTAGS",
					"enum": [
						"PARKINGTAGS"
					]
				},
				"VehiclePlateNumber": {
					"type": "string",
					"example": "ABCD234",
					"pattern": "^[a-zA-Z0-9]*$"
				},
				"TagNumber": {
					"type": "string",
					"pattern": "^[a-z_A-Z]{2}\\d{6}$|^\\d{8}$",
					"example": "AB123456"
				}
			}
		},
		"TicketPayable": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"example": "ParkingTicket"
				},
				"LineItemID": {
					"type": "string",
					"example": "5425432"
				},
				"AmountDue": {
					"type": "number",
					"format": "double",
					"example": 15.12
				},
				"DueDate": {
					"type": "string",
					"format": "date",
					"example": "2019-11-01",
					"pattern": "^[0-9-]*$"
				},
				"PaidAmount": {
					"type": "number",
					"format": "double",
					"example": 15.12,
					"description": "Amount paid for this line-item"
				},
				"LineItemFee": {
					"type": "number",
					"format": "double",
					"example": 0
				},
				"TagNumber": {
					"type": "string",
					"example": "fj23979723",
					"pattern": "^[a-zA-Z0-9]*$"
				},
				"NSFRefNo": {
					"type": "string",
					"example": "sadf3",
					"pattern": "^[a-zA-Z0-9]*$"
				}
			}
		},
		"Payment": {
			"required": [
				"BatchID", "CardNum", "CardType", "ConfirmationNumber", "GatewayPaymentID", "LineItemsIDs", "PaymentID", "PaymentType", "ProcessingFee", "TellerID", "TotalAmount", "TransactionTimestamp"
			],
			"type": "object",
			"properties": {
				"TellerID": {
					"type": "string",
					"example": "PayIT",
					"description": "this can be hardcoded to PAYIT"
				},
				"PaymentType": {
					"type": "string",
					"example": "CreditCard"
				},
				"PaymentID": {
					"type": "integer",
					"minimum":  1000000000,
					"maximum":  9999999999,
					"example":  1234567890,
					"description":"this is for tracing each payment to a billed item such as Tax, Utility, and parking ticket. When there is a payment paying Tax and Utility and several parking tickets, then the transaction number would be the same for all of them. This allows the transaction to be cancelled at the same time for everything"
				},
				"ConfirmationNumber": {
					"type": "string",
					"example": "j93J22j",
					"description":"The bank confirmation number that customers will see on their credit-card bill and reciept."
				},
				"TransactionTimestamp": {
					"type": "string",
					"format": "date-time",
					"description": "this is to understand when the transaction happened"
				},
				"BatchID": {
					"type": "string",
					"example": "2019-11-01",
					"description": "this is used to group transactions by day, closing periods, etc. We can have one batch per day containing everything"
				},
				"ProcessingFee": {
					"type": "number",
					"format": "double",
					"example": 0.01
				},
				"ConvenienceFee": {
					"type": "number",
					"format": "double",
					"example": 0.01
				},
				"TotalAmount": {
					"type": "number",
					"format": "double",
					"example": 1345.12,
					"description": "this is the payment amount"
				},
				"CardType": {
					"type": "string",
					"example": "visa",
					"description": "Debit Card/Visa/MC/Amex"
				},
				"CardNum": {
					"type": "string",
					"example": "4242********4242"
				},
				"LineItemsIDs": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"CancelledAmount": {
					"type": "number",
					"format": "double"
				},
				"CancelledLineItemsIDs": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			}
		}
	}
}
