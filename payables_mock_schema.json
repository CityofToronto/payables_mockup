{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Payables JSON Schema",
    "definitions": {
      "TaxQuery" : {
        "type" : "object",
        "properties" : {
          "ROLL_NUMBER" : {
            "type" : "string",
            "example" : "191406329000500000000"
          },
          "TENANT_NUMBER" : {
            "type" : "string",
            "example" : "453534"
          }
        },
        "description" : "Property Tax payables query"
      },
      "TaxQueryResp" : {
        "type" : "object",
        "properties" : {
          "LastUpdatedTimestamp" : {
            "type" : "string",
            "format" : "date-time"
          },
          "Service" : {
            "$ref" : "#/components/schemas/TaxService"
          },
          "Payables" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/TaxPayable"
            }
          }
        },
        "description" : "Property Tax payables"
      },
      "TaxService" : {
        "type" : "object",
        "properties" : {
          "Type" : {
            "type" : "string",
            "example" : "TAX",
            "enum" : [ "TAX" ]
          },
          "ROLL_NUMBER" : {
            "type" : "string",
            "example" : "191406329000500000000"
          },
          "TENANT_NUMBER" : {
            "type" : "string",
            "example" : "453534"
          },
          "ROLL_TYPE" : {
            "type" : "string",
            "example" : "Residential"
          },
          "Detail" : {
            "$ref" : "#/components/schemas/TaxService_Detail"
          }
        }
      },
      "TaxPayable" : {
        "allOf" : [ {
          "$ref" : "#/components/schemas/Payable"
        }, {
          "type" : "object",
          "properties" : {
            "Type" : {
              "type" : "string",
              "example" : "PropertyTaxBill"
            },
            "BILL_NUMBER" : {
              "type" : "string",
              "example" : "sdf345"
            },
            "Principle" : {
              "type" : "number",
              "example" : 100.23
            },
            "Interest" : {
              "type" : "number",
              "example" : 10.01
            },
            "Fee" : {
              "type" : "number",
              "example" : 0.2
            }
          }
        } ]
      },
      "TaxPayment" : {
        "type" : "object",
        "properties" : {
          "Payment" : {
            "$ref" : "#/components/schemas/Payment"
          },
          "Service" : {
            "$ref" : "#/components/schemas/TaxService"
          },
          "Payable" : {
            "$ref" : "#/components/schemas/TaxPayable"
          }
        }
      },
      "UtilityQuery" : {
        "type" : "object",
        "properties" : {
          "CLIENT_NUMBER" : {
            "type" : "string",
            "example" : "12343242"
          },
          "SERVICE_NUMBER" : {
            "type" : "string",
            "example" : "23452345"
          }
        },
        "description" : "Utility payables query"
      },
      "UtilityQueryResp" : {
        "type" : "object",
        "properties" : {
          "LastUpdatedTimestamp" : {
            "type" : "string",
            "format" : "date-time"
          },
          "Service" : {
            "$ref" : "#/components/schemas/UtilityService"
          },
          "Payables" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/UtilityPayable"
            }
          }
        },
        "description" : "Utility payables"
      },
      "UtilityService" : {
        "type" : "object",
        "properties" : {
          "Type" : {
            "type" : "string",
            "example" : "UTILITY",
            "enum" : [ "UTILITY" ]
          },
          "CLIENT_NUMBER" : {
            "type" : "string",
            "example" : "12343242"
          },
          "SERVICE_NUMBER" : {
            "type" : "string",
            "example" : "23452345"
          },
          "Detail" : {
            "$ref" : "#/components/schemas/UtilityService_Detail"
          }
        }
      },
      "UtilityPayable" : {
        "allOf" : [ {
          "$ref" : "#/components/schemas/Payable"
        }, {
          "type" : "object",
          "properties" : {
            "Type" : {
              "type" : "string",
              "example" : "UtilityBill"
            },
            "BILL_NUMBER" : {
              "type" : "string",
              "example" : "g4ga35"
            },
            "Principle" : {
              "type" : "number",
              "format" : "double",
              "example" : 1.23
            },
            "Discount" : {
              "type" : "number",
              "format" : "double",
              "example" : 10.01
            },
            "Fee" : {
              "type" : "number",
              "format" : "double",
              "example" : 0.23
            }
          }
        } ]
      },
      "UtilityPayment" : {
        "type" : "object",
        "properties" : {
          "Payment" : {
            "$ref" : "#/components/schemas/Payment"
          },
          "Service" : {
            "$ref" : "#/components/schemas/UtilityService"
          },
          "Payable" : {
            "$ref" : "#/components/schemas/UtilityPayable"
          }
        }
      },
      "TicketQuery" : {
        "type" : "object",
        "properties" : {
          "VehiclePlateNumber" : {
            "type" : "string",
            "example" : "ABCD234"
          }
        },
        "description" : "Parking Ticket payables query"
      },
      "TicketQueryResp" : {
        "type" : "object",
        "properties" : {
          "LastUpdatedTimestamp" : {
            "type" : "string",
            "format" : "date-time"
          },
          "Service" : {
            "$ref" : "#/components/schemas/TicketService"
          },
          "Payables" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/TicketPayable"
            }
          }
        },
        "description" : "Parking Ticket payables"
      },
      "TicketService" : {
        "type" : "object",
        "properties" : {
          "Type" : {
            "type" : "string",
            "example" : "PARKINGTAGS",
            "enum" : [ "PARKINGTAGS" ]
          },
          "VehiclePlateNumber" : {
            "type" : "string",
            "example" : "ABCD234"
          }
        }
      },
      "TicketPayable" : {
        "allOf" : [ {
          "$ref" : "#/components/schemas/Payable"
        }, {
          "type" : "object",
          "properties" : {
            "Type" : {
              "type" : "string",
              "example" : "ParkingTicket"
            },
            "TagNumber" : {
              "type" : "string",
              "example" : "fj23979723"
            },
            "NSFRefNo" : {
              "type" : "string",
              "example" : "sadf3"
            }
          }
        } ]
      },
      "TicketPayment" : {
        "type" : "object",
        "properties" : {
          "Payment" : {
            "$ref" : "#/components/schemas/Payment"
          },
          "Service" : {
            "$ref" : "#/components/schemas/TicketService"
          },
          "Payable" : {
            "$ref" : "#/components/schemas/TicketPayable"
          }
        }
      },
      "Payable" : {
        "type" : "object",
        "properties" : {
          "Amount" : {
            "type" : "number",
            "format" : "double",
            "example" : 15.12
          },
          "DueDate" : {
            "type" : "string",
            "format" : "date",
            "example" : "2019-11-01"
          }
        }
      },
      "Payment" : {
        "required" : [ "BatchID", "CardNum", "CardType", "ConfirmationNumber", "GatewayPaymentID", "LineItemsIDs", "PaymentID", "PaymentType", "ProcessingFee", "TellerID", "TotalAmount", "TransactionTimestamp" ],
        "type" : "object",
        "properties" : {
          "TellerID" : {
            "type" : "string",
            "example" : "PayIT"
          },
          "PaymentType" : {
            "type" : "string",
            "example" : "CreditCard"
          },
          "PaymentID" : {
            "type" : "string",
            "example" : "hwhr-2344-34asdf-4235"
          },
          "GatewayPaymentID" : {
            "type" : "string",
            "example" : "234-asd-342cf-35"
          },
          "ConfirmationNumber" : {
            "type" : "string",
            "example" : "j93J22j"
          },
          "TransactionTimestamp" : {
            "type" : "string",
            "format" : "date-time"
          },
          "BatchID" : {
            "type" : "string",
            "example" : "2019-11-01"
          },
          "ProcessingFee" : {
            "type" : "number",
            "format" : "double",
            "example" : 0.01
          },
          "TotalAmount" : {
            "type" : "number",
            "format" : "double",
            "example" : 1345.12
          },
          "CardType" : {
            "type" : "string",
            "example" : "visa"
          },
          "CardNum" : {
            "type" : "string",
            "example" : "4242********4242"
          },
          "LineItemsIDs" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "example" : "[\"ghjkjhfgh3\",\"sadfsdf2347y6\"]"
            }
          },
          "CancelledAmount" : {
            "type" : "number",
            "format" : "double"
          },
          "CancelledLineItemsIDs" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "example" : "[]"
            }
          }
        }
      },
      "TaxService_Detail" : {
        "type" : "object",
        "properties" : {
          "PropertyLocation" : {
            "type" : "string",
            "example" : "55 John Street, Toronto"
          },
          "TotalAmountDue" : {
            "type" : "number",
            "example" : 6234.33
          }
        }
      },
      "UtilityService_Detail" : {
        "type" : "object",
        "properties" : {
          "ServiceAddress" : {
            "type" : "string",
            "example" : "1234 Any Street"
          },
          "TotalAmountDue" : {
            "type" : "number",
            "format" : "double",
            "example" : 2345.23
          }
        }
      }
    
    },
    "type": "object"
}
